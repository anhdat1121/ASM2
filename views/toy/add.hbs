<form action="/toy/add" method="post">
   <h1>Add new toy</h1>
   Toy name: <input type="text" name="name" id="" required>
   <br><br>
   Toy image: <input type="url" name="image" id="" required>
   <br><br>
   Toy color:
   <input type="radio" name="color" value="Black"> Black
   <input type="radio" name="color" value="White"> White
   <input type="radio" name="color" value="Yellow"> Yellow
   <input type="radio" name="color" value="Blue"> Blue
   <br><br>
   Toy brand: <br>
   <select name="brand">
      {{#each brands }}
      <option value="{{ _id }}"> {{ name }}</option>
      {{/each}}
   </select>
   <br><br>

   Toy category: <br>
   <select name="category">
      {{#each categories }}
      <option value="{{ _id }}"> {{ name }}</option>
      {{/each}}
   </select>
   <br><br>
   <input type="submit" value="Add">
</form>