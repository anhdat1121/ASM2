<div class="w3-right">
<a class="btn btn-info" href="/brand/add">Add new brand</a>
<a class="btn btn-info" href="/country/add">Add new country</a>
<a class="btn btn-danger" href="/brand/deleteall">Delete all</a>
</div>
<form class="col-md-4" style="margin-top: 15px" action="/brand/search" method="post">
   <input class="form-control" type="search" name="keyword" id="" required placeholder="Search by brand name">
</form>  
<br><br>
<table class="table table-striped">
   <tr>
      <th>Brand name</th>
      <th>Brand country</th>
      <th colspan="2">Menu</th>
   </tr>
   {{#each brands }}
   <tr>
      <td>
         <a href="/brand/detail/{{ _id }}">
            {{ name }}
         </a>
      </td>
      <td>{{ country.name }}</td>
      <td>
         <a class="btn btn-warning" href="/brand/edit/{{ _id }}">Edit</a>
      </td>
      <td>
         <a class="btn btn-danger" href="/brand/delete/{{ _id }}"
         onclick="return confirm('Are you sure to delete this brand ?');"
         >Delete</a>
      </td>
   </tr>
   {{/each}}
</table>